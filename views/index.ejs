<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('metaAndLinks'); %>
    <%- include('commonScripts'); %>
      <script src="/scripts/index.js"></script>
      <title>Simply Video - Home</title>
</head>

<body>
  <div class="home d-flex align-items-center justify-content-center">
    <div>
      <div class="row justify-content-center">
        <img class="img-fluid img-thumbnail home-avatar rounded" id="avatarPicture"
          src="/images/avatars/avatar-male-3.png" alt="My Avatar" srcset="">
      </div>
      <ul class="container mt-2">
        <li class="row home-option home-option-selected" id="optionUsersName">Name</li>
        <li class="row home-option" id="optionRoomId">Room</li>
        <li class="row home-option" id="optionAvatar">Avatar</li>
      </ul>
      <div class="home-option-input" id="divUsersName">
        <input type="text" name="usersName" id="usersName" placeholder="John Doe" autocomplete="false">
        <input class="invisible" type="submit" value="Confirm" id="confirmUsersName" disabled>
      </div>
      <div class="home-option-input invisible" id="divRoomId">
        <input type="text" name="roomInputId" id="roomInputId" placeholder="room id" aria-describedby="roomHelp">
        <input type="submit" value="Go" id="go2Room">
        <small id="roomHelp" class="form-text text-muted">If none, a random one will be generated</small>
      </div>
      <div class="home-option-input invisible" id="divChangeAvatar">
        <small class="form-text text-muted">Click to change your avatar</small>
      </div>
    </div>
  </div>
  <!-- modal to change avatar-->
  <div class="modal" tabindex="-1" data-bs-backdrop="static" data-bs-keyboard="false" id="avatarModal"
    aria-labelledby="avatarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title">Choose your Avatar</h5>
        </div>
        <div class="modal-body">
          <div id="carouselAvatarIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carouselAvatarIndicators" data-slide-to="0" class="active"></li>
              <li data-target="#carouselAvatarIndicators" data-slide-to="1"></li>
              <li data-target="#carouselAvatarIndicators" data-slide-to="2"></li>
              <li data-target="#carouselAvatarIndicators" data-slide-to="3"></li>
              <li data-target="#carouselAvatarIndicators" data-slide-to="4"></li>
              <li data-target="#carouselAvatarIndicators" data-slide-to="5"></li>
              <li data-target="#carouselAvatarIndicators" data-slide-to="6"></li>
            </ol>
            <div class="carousel-inner">
              <div class="carousel-item active">
                <img class="d-block w-100" src="/images/avatars/avatar-male-3.png" alt="Avatar Male 3">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/avatars/avatar-male-1.png" alt="Avatar Male 1">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/avatars/avatar-male-4.png" alt="Avatar Male 4">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/avatars/avatar-female-1.png" alt="Avatar Female 1">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/avatars/avatar-female-3.png" alt="Avatar Female 3">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/avatars/avatar-female-4.png" alt="Avatar Female 4">
              </div>
              <div class="carousel-item">
                <img class="d-block w-100" src="/images/avatars/avatar-female-5.png" alt="Avatar Female 5">
              </div>
            </div>
            <a class="carousel-control-prev" href="#carouselAvatarIndicators" role="button" data-slide="prev">
              <span class="carousel-control-prev-icon" aria-hidden="true"></span>
              <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselAvatarIndicators" role="button" data-slide="next">
              <span class="carousel-control-next-icon" aria-hidden="true"></span>
              <span class="sr-only">Next</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</body>

</html>